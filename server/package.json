{
  "name": "server",
  "version": "1.0.0",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:createRoom": "jest tests/rooms/createRoom.test.ts",
    "test:joinRoom": "jest tests/rooms/joinRoom.test.ts",
    "build": "tsc",
    "start": "node lib/server.js",
    "dev": "FIRESTORE_EMULATOR_HOST=localhost:8080 ts-node src/server.ts",
    "dev:cloud": "ts-node src/server.ts",
    "emulator": "firebase emulators:start --only firestore",
    "serve": "npm run build && firebase emulators:start --only functions,firestore",
    "deploy": "npm run build && firebase deploy --only functions"
  },
