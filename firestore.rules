rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Games collection - read-only for clients
    match /games/{gameId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Players collection - read-only for clients
    match /players/{playerId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
